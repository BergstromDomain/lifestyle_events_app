<div class="row">
  <div class="col-md-12">
    <%= form_for(@lifestyle_event, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @lifestyle_event.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class= "panel-heading">
            <h3 class="panel-title">
              <%= pluralize(@lifestyle_event.errors.count, "error") %>
              prohibited this lifestyle event from being saved:
            </h3>

            <div class="panel-body">
              <ul>
                <% @lifestyle_event.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :description %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :description, class: "form-control", placeholder: "Description of lifestyle event", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit @submit_text, class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
